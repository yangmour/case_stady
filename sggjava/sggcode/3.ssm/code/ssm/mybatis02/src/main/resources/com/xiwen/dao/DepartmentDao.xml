<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xiwen.dao.DepartmentDao">
    <!--        Employee getById(Integer id); -->
    <select id="getById" parameterType="integer" resultType="com.com.xiwen.bean.Department">
        select * from departments where id = #{id}
    </select>

    <!--    List<Employee> findAll();-->
    <select id="findAll" resultType="department">
        select * from departments
    </select>

    <!--    String getByIdName(Integer id);-->
    <select id="getByIdName" parameterType="int" resultType="string">
        select name from departments where id = #{id}
    </select>
    <!--    int insert(Employee employee);-->
    <insert id="insert" parameterType="com.com.xiwen.bean.Department">
        insert into departments values(null,#{name});
    </insert>

    <!--    int delete(Integer id);-->
    <delete id="delete" parameterType="int">
        delete from departments where id = #{id};
    </delete>

    <!--    int update(Employee employee);-->
    <update id="update" parameterType="com.com.xiwen.bean.Department">
        update departments set name = #{name} where id =#{id}
    </update>

</mapper>